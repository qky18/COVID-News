<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="4dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="12dp"
        android:background="@drawable/card_rectangle"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/scholar_image"
            android:layout_width="70dp"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp">
            <TextView
                android:id="@+id/scholar_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:text="钟南山"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/textTitle"/>
            <LinearLayout
                android:id="@+id/scholar_indices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/scholar_name"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="H-index: "
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorDark" />
                <TextView
                    android:id="@+id/scholar_h_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="48"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:text="Activity: "
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorLight" />
                <TextView
                    android:id="@+id/scholar_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32.71"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:text="Publish: "
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#18BAF4"/>
                <TextView
                    android:id="@+id/scholar_pubs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32.71"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/scholar_indices2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/scholar_indices"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sociability: "
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorDark" />
                <TextView
                    android:id="@+id/scholar_sociability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.17"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:text="Citations: "
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorLight" />
                <TextView
                    android:id="@+id/scholar_citations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.17"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <TextView
                android:id="@+id/scholar_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/scholar_indices2"
                android:layout_marginTop="3dp"
                android:text="中国工程院院士、主任、组长"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/scholar_affiliation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/scholar_position"
                android:layout_marginTop="3dp"
                android:text="国家呼吸系统疾病临床医学研究中心/国家卫健委/广州呼吸疾病研究所"
                android:textSize="10sp"/>
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
